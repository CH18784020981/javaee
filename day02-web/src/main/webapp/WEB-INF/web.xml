        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>UserAddServlet</servlet-name>
        <servlet-class>club.banyuan.user.servlet.UserAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserDeleteServlet</servlet-name>
        <servlet-class>club.banyuan.user.servlet.UserDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserUpdateServlet</servlet-name>
        <servlet-class>club.banyuan.user.servlet.UserUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserQueryServlet</servlet-name>
        <servlet-class>club.banyuan.user.servlet.UserQueryServlet</servlet-class>
    </servlet>
