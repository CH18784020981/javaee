<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>WelcomeServlet</servlet-name>
        <servlet-class>club.banyuan.redirect.servlet.WelcomeServlet</servlet-class>

        <init-param>
            <param-name>greeting</param-name>
            <param-value>Welcome you</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>PortalServlet</servlet-name>
        <servlet-class>club.banyuan.redirect.servlet.PortalServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>club.banyuan.redirect.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>club.banyuan.servlet.search.SearchServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>WelcomeServlet</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PortalServlet</servlet-name>
        <url-pattern>/portal</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
</web-app>
