<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <!--    注册的class，此class必须是httpservlet的子类，注意class路径为包的全路径-->
  <servlet>
    <servlet-name>UserRegisterServlet</servlet-name>
    <servlet-class>club.banyuan.servlet.UserRegisterServlet</servlet-class>
  </servlet>

  <!--    指定容器的映射路径，根据此路径映射到servlet-name相同的 servlet-class 处理-->
  <servlet-mapping>
    <servlet-name>UserRegisterServlet</servlet-name>
    <url-pattern>/userRegister</url-pattern>
  </servlet-mapping>
</web-app>
